{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "include": [
      "src/*"
    ],
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "ordered-imports": [false],
    "interface-name" : [true, "never-prefix"],
    "no-empty-interface": false,
    "no-console": false,
    "object-literal-sort-keys": false,
    "no-debugger": false
  },
  "jsRules": {
    "object-literal-sort-keys": false
  }
}
